<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context=".CategoryFragment">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/abstrak7"
                    android:text="Abstract"
                    android:textColor="#ffffff"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/anjing"
                    android:text="Animal"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:src="@drawable/nature"
                    android:text="Nature"
                    android:textColor="#ffffff"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/marshmello"
                    android:text="Cartoon"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bunga1"
                    android:text="Flower"
                    android:textColor="#ffffff"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ramadan"
                    android:text="Word"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/iron"
                    android:text="Avenger"
                    android:textColor="#000000"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/pubg1"
                    android:text="PUBG"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/trees"
                    android:text="Trees"
                    android:textColor="#ffffff"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="15dp"
                    android:layout_height="100dp"
                    android:background="@drawable/other"
                    android:text="Other"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>